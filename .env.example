# Required server-side environment variables
SITE_NAME="Next.js Commerce"
CUSTOMER_GRAPH_TOKEN="your-secret-graphql-token"
ZONOS_REVALIDATION_SECRET="your-revalidation-secret"

# Optional server-side environment variables
ZONOS_DEFAULT_URL="https://commerce.route.js.zonos.com"
DEPLOYMENT_PLATFORM="vercel" # or "cloudflare"

# Required client-side environment variables (must be prefixed with NEXT_PUBLIC_)
NEXT_PUBLIC_ZONOS_API_KEY="your-public-api-key"
NEXT_PUBLIC_ZONOS_STORE_ID="your-store-id"
NEXT_PUBLIC_ZONOS_CDN_URL="https://cdn.jsdelivr.net/npm/@zonos/elements"
NEXT_PUBLIC_SITE_NAME="Next.js Commerce"

# Optional client-side environment variables
NEXT_PUBLIC_ZONOS_ENVIRONMENT="sandbox" # or "production"
NEXT_PUBLIC_COMPANY_NAME="Your Company Name"

# For testing and local development only
NEXT_PUBLIC_VALIDATE_ENV="true" # Set to validate environment in test environments
